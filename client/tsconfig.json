{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src",
      "vite-env.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
